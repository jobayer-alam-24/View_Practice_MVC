<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    @RenderSection("style", required: true)
</head>
<body>

    <header>
        <h1>@ViewData["Header"]</h1>
    </header>

    <nav>
        @RenderSection("Navigation", required:true)
    </nav>

    <div class="container">
        <aside class="sidebar">
           @RenderSection("Banner", required:true)
        </aside>

        <section class="main-content">
            @RenderBody()
        </section>
    </div>

    <footer>
        <p>@ViewData["Footer"]</p>
    </footer>

</body>
</html>
