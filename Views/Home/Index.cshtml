@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
    ViewData["Title"] = "Layout Main View Custom Built";
    ViewData["Header"] = "Header";
    ViewData["Footer"] = "&copy; 2024 My Website. All rights reserved.";
}
@section style
{
     <style>
       
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        span {
            color: red;
        }
        header {
            background-color: #4CAF50;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        nav {
            display: flex;
            justify-content: center;
            background-color: #333;
        }

        nav a {
            color: white;
            padding: 14px 20px;
            text-decoration: none;
            text-align: center;
        }

        nav a:hover {
            background-color: #ddd;
            color: black;
        }
        .container {
            display: flex;
            padding: 20px;
        }
        .sidebar {
            width: 25%;
            background-color: #f4f4f4;
            padding: 15px;
            margin-right: 10px;
        }
        .sidebar img
        {
            width: 300px;
            height: 300px;
        }
        .main-content {
            width: 70%;
            background-color: #f9f9f9;
            padding: 15px;
        }
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
}
@section Navigation
{
    <a href="#home">Home</a>
    <a href="#about">About</a>
    <a href="#services">Services</a>
    <a href="#contact">Contact</a>
}
@section Banner
{
    <img src="lib/images/naviforce.jpg" alt="watch">
}
